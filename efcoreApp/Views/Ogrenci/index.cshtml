@model IEnumerable<Ogrenci>

<h2>Öğrenci Listesi</h2>
<a asp-controller="Ogrenci" asp-action="Create" class="btn btn-success">Öğrenci Ekle</a>

<hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m=>m.OgrenciId)</th>
                <th>@Html.DisplayNameFor(m=>m.OgrenciAd)</th>
                <th>@Html.DisplayNameFor(m=>m.OgrenciSoyad)</th>
                <th style="width: 170px;">Setting</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OgrenciId)</td>
                    <td>@Html.DisplayFor(modelItem => item.OgrenciAd)</td>
                    <td>@Html.DisplayFor(modelItem => item.OgrenciSoyad)</td>
                    <td>
                        <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-success">Edit</a>
                        <a asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>