@model Egitmen

<h2>Egitmen Güncelle</h2>
<hr>
<div class="row">

    <div class="col-8">
        <form asp-controller="Egitmen" asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgretmenId">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Egitmen Adı</label>
                <input asp-for="Ad" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Soyad" class="form-label">Egitmen Soyadı</label>
                <input asp-for="Soyad" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta</label>
                <input asp-for="Eposta" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input asp-for="Telefon" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="BaslamaTarihi" class="form-label">Baslama Tarihi</label>
                <input asp-for="BaslamaTarihi" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Eğitmenin Bootcampleri</h4>
        <hr>

    </div>
</div>
